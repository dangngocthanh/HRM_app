<h2>Thông tin cá nhân</h2>

<%= form_with(model: @profile, url: profile_path(@profile), local: true, method: :put) do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>:
    <%= f.text_field :name, value: current_user.information.name ,class: 'form-control col-md-4' %>
  </div>

  <div class="mb-3">
    <%= f.label :address, class: "form-label"  %>:
    <%= f.text_field :address, value: current_user.information.address, class: 'form-control col-md-4'%>
  </div>

  <div class="mb-3">
    <%= f.label :phone, class: "form-label"  %>:
    <%= f.text_field :phone, value: current_user.information.phone, class: 'form-control col-md-4' %>
  </div>

  <div class="mb-3">
    <%= f.label :date_of_birth, class: "form-label"  %>:
    <%= f.date_field :date_of_birth, value: current_user.information.date_of_birth, class: 'form-control col-md-4' %>
  </div>

  <%= f.submit 'Update information', class: "btn btn-primary mt-2" %>
<% end %>