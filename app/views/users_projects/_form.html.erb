<%= form_with(model: @users_projects, url: users_projects_path, local: true) do |f| %>

  <div>
    <%= f.label :user_id %>
    <%= f.collection_select(:user_id, @users, :id, :email, prompt: false ) %>
  </div>

  <div>
    <%= f.label :project_id %>
    <%= f.collection_select(:project_id, @projects, :id, :name, prompt: false ) %>
  </div>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>