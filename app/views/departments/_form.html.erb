<%= form_with(model: @department, local: true) do |f| %>
  <div class="form-group">
  <%= f.label :name  %>
  <%= f.text_field :name , class: 'form-control col-md-7'  %>
  </div>
  <div class="form-group">
  <%= f.label :user_id %>
    <%= f.select :user_id, options_for_select(@users.map{|user| [user.email] }),{}, class: "form-control col-md-7"%>
  </div>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
<%= link_to 'Back', action: :index %>