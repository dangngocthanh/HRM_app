<h1>Department</h1>

<% if policy(@departments).edit? %>
  <div class="mb-4">
    <%= link_to 'Add department', new_department_path, class: 'btn btn-success mr-3' %>
    <%= link_to 'Add user to department', new_users_department_path, class: 'btn btn-success' %>
  </div>
<% end %>
<table class="table">
  <thead class="thead-dark">
    <th>#</th>
    <th>Name department</th>
    <th>Name PM</th>
    <% if policy(@departments).edit? %>
    <th>Action</th>
    <% end %>
  </thead>
  <% @departments.each_with_index  do |department, index| %>
  <tr>
    <td><%= index + 1 %></td>
    <td><%= link_to department.name, department_path(department.id) %></td>
    <td> PM: <%= Information.find(department.user_id).name %></td>
    <% if policy(department).edit? %>
      <td><%= link_to 'Edit', { :action => 'edit', :id => department.id } %></td>
    <% end %>
  </tr>
  <% end %>
</table>
