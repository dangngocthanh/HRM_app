<h1>Change leader on <%= @project.name %>'s project</h1>
<%= form_with(model: @project_change, local: true) do |f| %>
  <h4>Information project</h4>
  <div>
    <p>Project name: <%= @project.name %></p>
    <p>Project start at: <%= @project.created_at.strftime("%d/%m/%Y") %></p>
    <p>Leader name: <%= @current_leader.information.name %></p>
    <p>Leader email: <%= @current_leader.email %></p>
  </div>

  <%= f.label :user_id %>:
  <%= f.select :user_id, options_for_select(@leader.map { |leader| [leader.email, leader.id] }), {}, class: 'form-control col-md-4' %>
  <%= f.hidden_field :id, value: @project_id %>
  <%= f.submit 'Change', class: "btn btn-primary mt-2" %>
<% end %>
