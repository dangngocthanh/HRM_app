<% if @doing_projects.blank? %>
  <h3 style="text-align: center">You dont't have project</h3>
<% else %>
  <% if current_user.information.pm? || current_user.information.employee? %>
    <h2><%= Department.find(@department_id).name %>'s projects</h2>
  <% else %>
    <h2> All projects</h2>
  <% end %>
  <table class="table" style="text-align: center">
    <thead class="thead-dark">
    <th>Name project</th>
    <th>Name leader</th>
    <% if current_user.information.pm? || current_user.information.admin? %>
      <th colspan="2">Action</th>
    <% end %>
    </thead>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, users_project_path(project) %>
        <td><%= User.find(project.user_id).email %></td>
        </td>
        <% if policy(project).change_leader? %>
          <td>
            <div><%= link_to raw('<i class="fa fa-exchange" aria-hidden="true"></i>
 Change leader'), change_leader_path(:id => project.id), class: 'btn btn-success' %></div>
          </td>
          <td>
            <div><%= link_to raw('<i class="fa fa-check-circle-o" aria-hidden="true"></i>
 Done project'), done_project_path(:id => project.id), class: 'btn btn-success' %></div>
          </td>
        <% end %>
      </tr>
    <% end %>
  </table>
<% end %>
<%= link_to 'Back', '/' %>



