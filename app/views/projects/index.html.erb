
<%=render "layouts/navbar" %>
<h2><%= Department.find(session[:department_id]).name %>'s projects</h2>
<% @projects.each do |project| %>
  <table>
    <% if project.status != '1' %>
      <tr>
        <td><%= link_to project.name, { :action => 'users_projects_detail', :id => project.id } %>
          (<%= User.find(project.user_id).email %>)
        </td>
        <% if current_user.information.role_id == 1 || current_user.information.role_id == 3 %>
          <td><%= link_to 'Change leader', { :action => 'change_leader', :id => project.id } %></td>
          <td><%= link_to 'Done project', { :action => 'done_project', :id => project.id } %></td>
        <% end %>
      </tr>
    <% end %>
  </table>
<% end %>
<%= link_to 'Back', '/' %>
