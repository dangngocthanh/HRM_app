<%= form_with(model: @users_department, method: :post, local: true) do |f| %>

  <div>
    <%= f.label :user_id %>
    <%= f.collection_select(:user_id, @users, :id, :email, prompt: true) %>
  </div>

  <div>
    <%= f.label :department_id %>
    <%= f.collection_select(:department_id, @departments, :id, :name, prompt: true) %>
  </div>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>